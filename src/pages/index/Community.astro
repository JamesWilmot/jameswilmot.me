---
import './Section.scss';
import './Common.scss';

import CommunityItem from '@components/items/CommunityItem.astro';
import InstagramLink from '@components/links/instagram.astro';

import { Picture } from 'astro:assets';

// import { Slider } from "solid-slider";
// import "solid-slider/slider.css";

import MHVTalking from "@assets/mhv/talking-cropped.png";
import MHVMetalwork from "@assets/mhv/metalwork-cropped.png";
import VarvaraCropped from "@assets/mhv/varvara-cropped.png";
import MX5Stands from "@assets/mhv/mx5-cropped.png";
import Nerdery from "@assets/mhv/nerd-cropped.png";
import WHS from "@assets/mhv/whs-cropped.png";

import Arbo from "@assets/tw/arbo-cropped.png";
import LBG from "@assets/tw/lbg-cropped.png";
import MolongloFord from "@assets/tw/river-cropped.png";
import BermGrinding from "@assets/tw/james2-cropped.png";
import DavidCorflute from "@assets/ifc2024/timeforchange2.webp";

import BallControl from "@assets/hockey/controllingBall.png";
import Premiers from "@assets/hockey/premiersCropped.png";
---
<section id="community">
  <div class="container">
    <div class="main">
      <h1>Community</h1>
      <CommunityItem 
             place="Canberra Makerspace"
             position="Executive & community member"
             humanDates="Oct 2021–<em>present</em>"
             location="Giralang, Canberra"
             >
        <p>
        <em><a href="https://canberramaker.space/">Canberra Makerspace</a> is a community run multi-use workshop and meeting space in Giralang.</em>
        </p>
        <p>Make. Hack. Void.</p>
        <p>My contributions:</p>
        <ul>
          <li>Workshop management, maintenance & organisation</li>
          <li>Insurance obligations and reporting</li>
          <li>Incorporated association reporting requirements</li>
          <li>Designed, implemented and deployed website (v2.0 coming soon!)</li>
        </ul>
        <div class="grid-tiles">
          <figure>
            <Picture src={MHVTalking} format={['avif', 'webp']}
              title="Some collaboration in the workshop"
              alt="Four people discussion a problem around a workbench"
            />
            <figcaption>Collaborating in the workshop</figcaption>
          </figure>
          <figure>
            <Picture src={MHVMetalwork} format={['avif', 'webp']}
              title="Our metalwork corner"
              alt="A collection of tools in the Canberra Makerspace metalwork corner"
            />
            <figcaption>The metalwork corner</figcaption>
          </figure>
          <figure>
            <Picture src={VarvaraCropped} format={['avif', 'webp']}
              title="Carefully examining spark plugs"
              alt="Two women examining spark plugs"
            />
            <figcaption>Examining spark plugs</figcaption>
          </figure>
          <figure>
            <Picture src={MX5Stands} format={['avif', 'webp']}
              title="No wheels"
              alt="A car on jackstands outside Canberra Makerspace"
            />
            <figcaption>Mazda MX-5 (NB) on jackstands</figcaption>
          </figure>
          <figure>
            <Picture src={Nerdery} format={['avif', 'webp']}
              title="We're always up to computer nerdery"
              alt="A computer on a table"
            />
            <figcaption>8-bit computer nerdery</figcaption>
          </figure>
          <figure>
            <Picture src={WHS} format={['avif', 'webp']}
              title="Very safely."
              alt="Two men standing on a wall mounting an antenna"
            />
            <figcaption>Safely mounting an antenna</figcaption>
          </figure>
        </div>
      </CommunityItem>
      <CommunityItem 
             place="#thirstyworkcbr"
             humanDates="Feb 2022–<em>present</em>"
             location="Canberra"
             >
             <p>
             <em>
             <InstagramLink href="https://www.instagram.com/explore/tags/thirstyworkcbr/" target="_blank">#thirstyworkcbr</InstagramLink>
                is an inclusive gravel-oriented social ride—whatever your stead as long as you’re comfortable on dirt, no fear, we’ll make sure you make it to the pub!
             </em>
             </p>
             <p>
               Organise and lead community gravel bike rides through Instagram
             </p>
             <div class="grid-tiles">
               <figure>
                  <Picture src={Arbo} format={['avif', 'webp']}
                    title="We're immensely privileged in Canberra with some excellent riding."
                    alt="A view downhill in an arboretum with three bikers"
                  />
                 <figcaption>Climbing into the National Arboretum</figcaption>
               </figure>
               <figure>
                  <Picture src={LBG} format={['avif', 'webp']}
                    title="There's always bike maintenance"
                    alt="Collection of bikes on a lake shore with two people working on a bike"
                  />
                 <figcaption>Bike maintenance under an open sky</figcaption>
               </figure>
               <figure>
                  <Picture src={MolongloFord} format={['avif', 'webp']}
                    title="The Mighty, Mighty Molonglo"
                    alt="Person riding bike crossing a river"
                  />
                 <figcaption>Fording the mighty Molonglo</figcaption>
               </figure>
               <figure>
                  <Picture src={BermGrinding} format={['avif', 'webp']}
                    title="Busy berm grinding"
                    alt="Two people on bikes paused while riding a berm"
                  />
                 <figcaption>A pause from grinding a berm</figcaption>
               </figure>
             </div>
      </CommunityItem>
    </div>
    <aside>
      <CommunityItem 
             place="Independents for Canberra"
             position="Campaign volunteer"
             humanDates="Oct 2024"
             location="Yerrabi electorate, Canberra"
             >
        <p>
        <em>
          <a href="https://www.independentsforcanberra.com/">Independents for
            Canberra</a> was a volunteer-led, community-driven political
          movement that endorses and supports community independents to run for
          office at ACT Elections. </em>
        </p>
        <p>
        Volunteered for <a href="https://www.davidpollard.com.au/">David
          Pollard</a>—an independent candidate for the electorate of
        Yerrabi—during the 2024 ACT Legislative Assembly election campaign</p>
        <figure>
          <Picture src={DavidCorflute} format={['avif', 'webp']}
            title="So, so close"
            alt="Political campaign corflute on side of road"
          />
          <figcaption>An example of my handiwork</figcaption>
        </figure>
      </CommunityItem>
      <CommunityItem 
             place="Central Hockey Club"
             position="SL5 Player"
             humanDates="2024 Season"
             location="Lyneham, Tuggeranong & Jerrabomberra"
             >
        <figure>
          <Picture src={BallControl} format={['avif', 'webp']}
            title="Not for long."
            alt="Field hockey players on field, I've got possession of the ball"
          />
          <figcaption>Maintaining possession during the grand final</figcaption>
        </figure>
        <figure>
          <Picture src={Premiers} format={['avif', 'webp']}
            title="First season back after well over a decade away"
            alt="Group of men on a hockey field standing around a 2024 Premiers sign"
          />
          <figcaption>SL5 Premiers for Season 2024</figcaption>
        </figure>
      </CommunityItem>
      <CommunityItem 
             place="Y's-buys"
             position="Volunteer shop attendant"
             humanDates="Aug 2018–Mar 2020"
             location="Belconnen, Canberra"
             >
             <p><em>Y's-buys was an op shop operated by <a href="https://ymcacanberra.org.au/">YMCA Canberra</a> raising funds to support community services.</em></p>
       <p>Responsibilities:</p>
        <ul>
          <li>Donation sorting, pricing & placing out for display</li>
          <li>Management of a fairly substantial book library</li>
          <li>Customer service</li>
        </ul>
      </CommunityItem>
      <CommunityItem 
             place="The Lab"
             position="Mentor"
             humanDates="Jun 2014–Dec 2016"
             location="Dee Why, Sydney"
             >
        <p><em>
          <a href="https://thelab.org.au/">The Lab</a> is a network of technology clubs for 
          autistic children and young people who enjoy working with computers.
        </em></p>
      </CommunityItem>
      <CommunityItem 
             place="Code Rangers"
             position="Assistant teacher"
             humanDates="Apr 2016–Nov 2016"
             location="Sydney"
             >
             <p><em>Code Rangers was an organisation providing coding lessons in schools.</em></p>
      </CommunityItem>
      <CommunityItem 
             place="Cana Communities"
             position="Overnight stay volunteer"
             humanDates="2015"
             location="Redfern, Sydney"
             >
             <p>
      <em>
        <a href="https://www.cana.org.au/">Cana Communities</a> is a not-for-profit charity working 
        with men and women who are experiencing homelessness, addiction, imprisonment, mental 
        health issues and other barriers that have prevented them from creating a positive life for themselves.
      </em>
             </p>
      </CommunityItem>
      <CommunityItem 
             place="State Emergency Service"
             position="Rescue volunteer"
             humanDates="Mar 2012–Jun 2014"
             location="Randwick, Sydney"
             >
             <p>
              <em>
                The NSW <a href="https://www.ses.nsw.gov.au/">State Emergency Service</a> is a volunteer-based emergency service 
                that is responsible for helping communities prepare and respond to 
                floods, storms and tsunami. 
              </em>
             </p>
             <p>Qualifications:</p>
        <ul>
          <li>Senior First Aid</li>
          <li>Storm and Water Rescue</li>
          <li>Maintaining Team Safety</li>
          <li>General Rescue</li>
          <li>Radio Operation</li>
          <li>4WD Operation</li>
        </ul>
      </CommunityItem>
      <CommunityItem 
             place="Primary Ethics"
             position="Volunteer ethics teacher"
             humanDates="Mar 2013–Dec 2014"
             location="Daceyville, Sydney"
             >
             <p>
              <em>
               <a href="https://primaryethics.com.au/">Primary Ethics</a> is an alternative
               to special religious education in New South Wales providing ethics classes for school-aged children. 
              </em>
             </p>
             <p>
              <em>
               In ethics classes, children are guided to develop their skills in critical thinking, ethical reasoning and respectful discussion
              </em>
             </p>
      </CommunityItem>
      <CommunityItem 
             place="Shack Tutoring"
             position="Volunteer tutor"
             humanDates="2008"
             location="UNSW Sydney"
             >
        <p>
      <em>
        <a href="https://www.arc.unsw.edu.au/community/shack-tutoring">Shack tutoring</a> is a 
        volunteer tutoring service run by the Univerity of New South Wales student organisation ARC.
        </em>
       </p>
       <p>NSW HSC Subjects Tutored:</p>
        <ul>
         <li>
           2 Unit & Extension 1 Mathematics
         </li>
          <li>
            Physics
          </li>
          <li>
            Chemistry
           </li>
        </ul>
      </CommunityItem>
    </aside>
  </div>
</section>

<style lang="scss">
  section#community {
    .container {
      --gap: 4ch;
      display: flex;
      gap: var(--gap);
      width: 100%;
      .main {
        flex: 3;
      }
      aside {
        flex: 4;
        columns: 2;
        column-gap: 4ch;
      }
    }

    @container (width < 1000px) {
      .container {
        flex-direction: column;
        aside {
          column-gap: 2ch;
        }
      }
    }
  }
</style>
